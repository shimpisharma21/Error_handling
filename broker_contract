pragma solidity ^0.8.18;

contract BrokerContract {
    address public broker;

    constructor() {
        broker = msg.sender; // Set the contract deployer as the broker
    }

    // Modifier to restrict function access to the broker
    function onlyBroker() public view {
        require(msg.sender == broker, "Only broker can call this function.");
    }

    // Function to check if the caller is the broker
    function brokerIsHere() public view {
        if (msg.sender != broker) {
            revert("Caller is not the broker.");
        }
    }

    // Function to assert that the caller is the broker
    function Broker() public view {
        assert(msg.sender == broker);
    }
}

